{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>
    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('article_detail', { id: article.id }) }}">
                    {{ article.title }}
                </a>
                <p>Créé le : {{ article.createdAt|date('d/m/Y H:i') }}</p>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
